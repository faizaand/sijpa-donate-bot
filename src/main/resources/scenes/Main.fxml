<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="xyz.faizaan.sijpadonatebot.Main">
   <children>
      <Label layoutX="14.0" layoutY="14.0" prefHeight="57.0" prefWidth="572.0" text="Select your files. If you need help, see the demo.docx and demo.xlsx files for examples on how to format your documents." wrapText="true" />
      <Button layoutX="70.0" layoutY="101.0" mnemonicParsing="false" onAction="#btnSelectTemplate" prefHeight="31.0" prefWidth="203.0" text="Select a letter template" />
      <Button layoutX="70.0" layoutY="145.0" mnemonicParsing="false" onAction="#btnSelectSpreadsheet" prefHeight="31.0" prefWidth="203.0" text="Select a spreadsheet" />
      <Button layoutX="70.0" layoutY="195.0" mnemonicParsing="false" onAction="#btnSelectOutput" prefHeight="31.0" prefWidth="203.0" text="Select an output folder" />
      <Label fx:id="templateLbl" layoutX="333.0" layoutY="97.0" prefHeight="39.0" prefWidth="255.0" text="Nothing selected." wrapText="true" />
      <Label fx:id="spreadsheetLbl" layoutX="333.0" layoutY="141.0" prefHeight="39.0" prefWidth="255.0" text="Nothing selected." wrapText="true" />
      <Label fx:id="outputLbl" layoutX="333.0" layoutY="200.0" prefHeight="21.0" prefWidth="255.0" text="Nothing selected." wrapText="true" />
      <Button layoutX="333.0" layoutY="244.0" mnemonicParsing="false" onAction="#btnGenerate" prefHeight="31.0" prefWidth="203.0" text="Generate letters" />
      <TextField fx:id="nameField" layoutX="70.0" layoutY="244.0" prefHeight="31.0" prefWidth="255.0" promptText="File name format" text="[First name] [Last name].docx" />
      <Label fx:id="statusLbl" layoutX="13.0" layoutY="276.0" prefHeight="31.0" prefWidth="369.0" text="Ready." textAlignment="CENTER" />
   </children>
</AnchorPane>
